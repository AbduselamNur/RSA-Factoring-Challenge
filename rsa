#!/usr/bin/python3
import sys
import time
import signal

def is_prime(n):
    # check if n is a prime number
    if n <= 1:
        return False
    if n == 2:
        return True
    if n % 2 == 0:
        return False
    for i in range(3, int(n**0.5) + 1, 2):
        if n % i == 0:
            return False
    return True

def factorize(n):
    # find the prime factors of n
    for i in range(2, int(n**0.5) + 1):
        if n % i == 0 and is_prime(i):
            return i, n // i
    # n is prime
    return n, 1

def main():
    # check the number of arguments
    if len(sys.argv) != 2:
        print("Usage: rsa <file>")
        exit(1)
    
    # open the file
    try:
        f = open(sys.argv[1], "r")
        for line in f:
            # convert the line to an integer
            n = int(line.strip())
            # factorize the number
            p, q = factorize(n)
            # print the result
            print(f"{n}={q}*{p}")
    
    except FileNotFoundError:
            print("File not found")
            exit(2)
    
    f.close()

if __name__ == "__main__":
    main()

